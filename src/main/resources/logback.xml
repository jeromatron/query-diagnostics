<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">com.datastax.oss.driver.internal.core.channel
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.datastax.oss.driver.internal.core.channel" level="DEBUG"/>
</configuration>